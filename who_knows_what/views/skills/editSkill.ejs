<% include ../partials/header %>
<div class="container">
    <h1> Edit User</h1>
    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
       Name: <input type="text" name="user[name]" value="<%= user.name %>" placeholder="<%=user.name%>" > <br />
        Email: <input type="text" name="user[email]" value="<% user.email%>" placeholder="<%=user.email%>"> <br />
        Department: <input type="text" name="user[department]" value="<% user.department%>" placeholder="<%=user.department%>"> <br />
        Status: <input type="text" name="user[status]" value="<% user.status%>" placeholder="<%=user.status%>"> <br />
        <button class="btn btn-lg">Edit</button>
    </form>
